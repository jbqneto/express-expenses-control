generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  googleId  String? @unique
  rules     Rule[]
  expenses  Expense[]
}

model Rule {
  id       Int    @id @default(autoincrement())
  term     String
  category String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  category    String?
  date        DateTime
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}